<h1>My tasks</h1>
  <ul class="task-list">
  <% @tasks.each do |task| %>
    <li class=task-item>
      <div class="task-content">
        <div class="form-check">
          <input type="checkbox" class="form-check-input"
            id="task_<% task.id %>"
            name="task[completed]"
            value="1"
            <%= 'checked' if task.completed? %>>
          <label class="form-check-label" for="task_<% task.id %>">
            <%= link_to task.title, task_path(task) %>
          </label>
        </div>

        <%= link_to task_path(task), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } do %>
          <i class="fa-regular fa-trash-can"></i>
        <% end %>
      </div>
    </li>
  <% end %>
  </ul>

  <p class="btn-add-new-task"><%=link_to "Add a new task", new_task_path%></p>
