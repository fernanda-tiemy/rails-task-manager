<h1>My tasks</h1>
  <ul class="task-list">
  <% @tasks.each do |task| %>
    <li class=task-item>
      <div class="task-content">
        <input type="checkbox"
          id="task_<% task.id %>"
          name="task[completed]"
          value="1"
          <%= 'checked' if task.completed? %>>
        <label for="task_<% task.id %>" class="sr-only" > <%= link_to task.title, task_path(task) %>
        </label>
        <%= link_to 'Delete this task', task_path(task), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
        </div>
      </div>
    </li>
  <% end %>
  </ul>

  <p><%=link_to "Add a new task", new_task_path%></p>
