<h1><%= @task.title %> </h1>
<p><%= @task.details%></p>

<input type="checkbox"
  id="task_<% @task.id %>"
  name="task[completed]"
  value="1" <%= 'checked' if @task.completed? %>>
<label for="task_<% @task.id %>" class="details-checked">
  <%= @task.completed? ? 'This task is completed': 'This task is not completed yet!'%>
</label>
<p><%= link_to "Back to list", tasks_path %></p>
<p><%=link_to "Update a task", edit_task_path%></p>
